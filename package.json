{
  "name": "tigerbeetle-node",
  "version": "0.2.5",
  "description": "Official TigerBeetle Node.js client",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coilhq/tigerbeetle-node.git"
  },
  "files": [
    "LICENSE",
    "README.md",
    "package.json",
    "tsconfig.json",
    "yarn.lock",
    ".yarn/releases",
    ".yarnrc.yml",
    "dist",
    "src/c.zig",
    "src/index.ts",
    "src/node.zig",
    "src/tigerbeetle/src",
    "src/tigerbeetle/scripts",
    "src/translate.zig",
    "scripts/download_node_headers.sh"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "prepack": "git submodule deinit --all && git submodule update --init && yarn build",
    "build": "yarn build:tsc && yarn build:zig",
    "build:tsc": "tsc",
    "build:zig": "mkdir -p dist &&  zig/zig build-lib -dynamic -lc -isystem build/node-$(node --version)/include/node src/node.zig -femit-bin=dist/client.node",
    "clean": "rm -rf build dist node_modules src/zig-cache zig",
    "install:zig": "./src/tigerbeetle/scripts/install_zig.sh",
    "postinstall": "yarn install:zig && ./scripts/download_node_headers.sh && yarn build:zig"
  },
  "author": "Coil Technologies, Inc",
  "license": "Apache-2.0",
  "contributors": [
    "Donovan Changfoot <don@coil.com>",
    "Isaac Freund <isaac.freund@coil.com>",
    "Joran Dirk Greef <joran@coil.com>"
  ],
  "devDependencies": {
    "@types/node": "^14.14.41",
    "typescript": "^4.0.2"
  }
}
